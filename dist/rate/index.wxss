.i-rate {
    display: inline-block;
    font-size: 20px;
    font-style: normal;
    font-weight: 400;
    margin: 0;
    padding: 0;
    vertical-align: middle;
}

.i-rate-hide-input {
    display: none;
}

.i-rate-star {
    color: #e9e9e9;
    display: inline-block;
}

.i-rate-current {
    color: #f5a623;
}

.i-rate-text {
    display: inline-block;
    font-size: 14px;
    margin-left: 6px;
    vertical-align: middle;
}