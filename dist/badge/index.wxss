.i-badge {
    display: inline-block;
    line-height: 1;
    position: relative;
    vertical-align: middle;
}

.i-badge-count {
    text-rendering: optimizeLegibility;
    background: #ed3f14;
    border: 1px solid transparent;
    border-radius: 9px;
    box-shadow: 0 0 0 1px #fff;
    box-sizing: border-box;
    color: #fff;
    font-size: 12px;
    height: 18px;
    line-height: 18px;
    min-width: 18px;
    padding: 0 5px;
    position: absolute;
    right: 0;
    text-align: center;
    top: -6px;
    transform: translateX(50%);
    transform-origin: -10% center;
    white-space: nowrap;
    z-index: 10;
}

.i-badge-count-alone {
    display: block;
    position: relative;
    top: auto;
    transform: translateX(0);
}

.i-badge-dot {
    background: #ed3f14;
    border-radius: 100%;
    box-shadow: 0 0 0 1px #fff;
    height: 8px;
    position: absolute;
    right: -8px;
    top: -4px;
    transform: translateX(-50%);
    transform-origin: 0 center;
    width: 8px;
    z-index: 10;
}