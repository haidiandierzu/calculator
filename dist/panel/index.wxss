.i-panel {
    overflow: hidden;
    position: relative;
}

.i-panel-title {
    color: #1c2438;
    font-size: 14px;
    line-height: 1;
    padding: 20px 16px 10px;
}

.i-panel-title-hide-top {
    padding-top: 0;
}

.i-panel-content {
    background: #fff;
    overflow: hidden;
    position: relative;
}

.i-panel-content::after {
    border-color: #e9eaec;
    border-style: solid;
    border-width: 1px 0;
    box-sizing: border-box;
    content: "";
    height: 200%;
    left: 0;
    pointer-events: none;
    position: absolute;
    top: 0;
    transform: scale(.5);
    transform-origin: 0 0;
    width: 200%;
}

.i-panel-without-border::after {
    border: 0;
}