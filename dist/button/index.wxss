.i-btn {
    background-image: none;
    background: #f7f7f7!important;
    border: 0!important;
    border-radius: 2px;
    box-shadow: inset 0 0 0 1px rgba(0,0,0,.1);
    color: #fff!important;
    color: #495060!important;
    cursor: pointer;
    font-size: 14px;
    height: 44px;
    line-height: 44px;
    margin: 10px;
    position: relative;
    text-align: center;
    text-decoration: none;
    touch-action: manipulation;
    user-select: none;
    vertical-align: middle;
    white-space: nowrap;
}

.i-btn-hover {
    opacity: .9;
}

.i-btn-long {
    border-radius: 0;
    box-shadow: none;
    margin: 0;
}

.i-btn-large {
    height: 48px;
    line-height: 48px;
}

.i-btn-small {
    height: 40px;
    line-height: 40px;
}

.i-btn-primary {
    background: #7671ba!important;
    color: #fff!important;
}

.i-btn-ghost {
    background: #fff!important;
    color: #fff!important;
    color: #495060!important;
}

.i-btn-success {
    background: #19be6b!important;
    color: #fff!important;
}

.i-btn-warning {
    background: #f90!important;
    color: #fff!important;
}

.i-btn-error {
    background: #ed3f14!important;
    color: #fff!important;
}

.i-btn-info {
    background: #2db7f5!important;
    color: #fff!important;
}

.i-btn-circle {
    border-radius: 44px;
}

.i-btn-large.i-btn-circle {
    border-radius: 48px;
}

.i-btn-small.i-btn-circle {
    border-radius: 40px;
}

.i-btn-loading {
    opacity: .6;
}

.i-btn-loading-inner {
    animation: btn-spin .6s linear;
    animation-iteration-count: infinite;
    background: 0 0;
    border: 2px solid #fff;
    border-left-color: transparent;
    border-radius: 50%;
    display: inline-block;
    height: 14px;
    margin-right: 12px;
    vertical-align: middle;
    width: 14px;
}

.i-btn-disabled {
    background: #f7f7f7!important;
    color: #bbbec4!important;
}

.i-btn-inline {
    display: inline-block;
}

@-webkit-keyframes btn-spin {
    0% {
        transform: rotate(0);
    }

    100% {
        transform: rotate(1turn);
    }
}

@keyframes btn-spin {
    0% {
        transform: rotate(0);
    }

    100% {
        transform: rotate(1turn);
    }
}