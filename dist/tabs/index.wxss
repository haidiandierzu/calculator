.i-tabs {
    -webkit-box-align: center;
    align-items: center;
    background: #fff;
    box-sizing: border-box;
    display: flex;
    height: 42px;
    justify-content: space-around;
    line-height: 42px;
    position: relative;
    width: 100%;
}

.i-tabs::after {
    border: solid #e9eaec;
    border-width: 0 0 1px;
    box-sizing: border-box;
    content: "";
    height: 200%;
    left: 0;
    pointer-events: none;
    position: absolute;
    top: 0;
    transform: scale(.5);
    transform-origin: 0 0;
    width: 200%;
}

.i-tabs-scroll {
    display: block;
    overflow-x: auto;
    white-space: nowrap;
}

.i-tabs-fixed {
    position: fixed;
    top: 0;
    z-index: 2;
}